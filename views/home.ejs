
       <link rel="stylesheet" href="/css/home.css">

      <div id="main-body">
        <section id="user-post">
            <h4>Posts</h4>
            <% if(locals.user){%>>
            <form action="/posts/create" method="POST">
                <textarea name="content" rows="3" cols="30"></textarea>
                <input type="submit" value="Post">
            </form>
            <% } %>

            <div>
                <ul>
                    <% for(post of posts){ %>
                        <%- include('_post')-%>
                    
                        <% } %>
                </ul>
            </div>
        </section>
        <section id="user-friends">
            <h4>Friends</h4>
            <% for(u of all_user){%>
                <a href="/users/profile/<%= u.id %>" > <%= u.name %></a><br>

                <% } %>
        </section>
      </div>
